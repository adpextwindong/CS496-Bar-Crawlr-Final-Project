<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="group5.com.barcrawlr.BarDescriptionActivity"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_beer_search_result_bookmark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_bookmark_border_black_48dp"/>

    <TextView
        android:id="@+id/tv_bar_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        android:textColor="#000"
        android:fontFamily="serif"
        android:padding="14dp"
        android:paddingBottom="20dp"
        android:layout_marginRight="16dp"/>

    <TextView
        android:id="@+id/tv_bar_website"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:textSize="20sp"
        android:fontFamily="serif"
        android:paddingBottom="12dp"
        android:textColor="@color/accent_material_light"/>

    <ImageView
        android:id="@+id/iv_bar_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"/>
        android:adjustViewBounds="true"
        android:cropToPadding="true"
        android:scaleType="fitCenter" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:layout_marginLeft="16dp"
        android:textSize="25sp"
        android:fontFamily="serif"
        android:text="Description:"/>

    <TextView
        android:id="@+id/tv_bar_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:textSize="18dp"
        android:fontFamily="serif"
        android:layout_marginLeft="16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:layout_marginLeft="22dp"
        android:textSize="20sp"
        android:fontFamily="serif"
        android:text="Established In:"/>

    <TextView
        android:id="@+id/tv_bar_established"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:textSize="18dp"
        android:fontFamily="serif"
        android:layout_marginLeft="22dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:layout_marginLeft="22dp"
        android:textSize="20sp"
        android:fontFamily="serif"
        android:text="Organic:"/>

    <TextView
        android:id="@+id/tv_bar_organic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:textSize="18dp"
        android:fontFamily="serif"
        android:layout_marginLeft="22dp"/>

</LinearLayout>
